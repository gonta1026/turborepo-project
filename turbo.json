{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", "bin/**"]
		},
		"format-and-lint": {
			"cache": false
		},
		"format-and-lint:fix": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["build"],
			"cache": false
		},
		"test": {
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
